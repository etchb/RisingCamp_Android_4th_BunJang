<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".src.main.home.detail.ProductDetailActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/rcy_cardview"
                android:layout_width="match_parent"
                android:layout_height="410dp"
                android:src="@color/gray"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toTopOf="@+id/rcy_txt_price"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintVertical_chainStyle="packed"></ImageView>

            <TextView
                android:id="@+id/rcy_txt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="12dp"
                android:layout_marginTop="12dp"
                android:text="150,000원"
                android:textSize="19sp"
                android:textColor="@color/black"
                android:fontFamily="@font/nanum_square_eb"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintTop_toBottomOf="@+id/rcy_cardview"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/rcy_img_bungae"
                app:layout_constraintBottom_toTopOf="@+id/rcy_txt_title"
                app:layout_constraintVertical_chainStyle="packed"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/rcy_img_bungae"
                android:layout_width="40dp"
                android:layout_height="15dp"
                android:layout_marginHorizontal="3dp"
                android:src="@drawable/img_bungae_pay"
                android:scaleType="fitCenter"
                app:layout_constraintTop_toTopOf="@+id/rcy_txt_price"
                app:layout_constraintBottom_toBottomOf="@+id/rcy_txt_price"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/rcy_txt_price"
                app:layout_constraintHorizontal_bias="0"/>

            <View
                android:id="@+id/view_empty"
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_marginRight="10dp"
                android:background="@color/lightGray"
                app:layout_constraintTop_toTopOf="@+id/rcy_txt_price"
                app:layout_constraintBottom_toBottomOf="@+id/rcy_txt_price"
                app:layout_constraintLeft_toRightOf="@+id/rcy_img_bungae"
                app:layout_constraintRight_toLeftOf="@+id/detail_img_how_much"
                app:layout_constraintHorizontal_bias="1"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/detail_img_how_much"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginHorizontal="10dp"
                android:src="@drawable/img_how_much"
                android:scaleType="fitCenter"
                app:layout_constraintTop_toTopOf="@+id/rcy_txt_price"
                app:layout_constraintBottom_toBottomOf="@+id/rcy_txt_price"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintLeft_toRightOf="@+id/view_empty"
                app:layout_constraintHorizontal_bias="0"/>

            <TextView
                android:id="@+id/rcy_txt_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:lineSpacingExtra="5dp"
                android:text="갤럭시 GTX970 갤럭시 GTX970 갤럭시 GTX970 갤럭시 GTX970 갤"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/nanum_square_eb"
                android:maxLines="2"
                android:ellipsize="end"
                app:layout_constraintTop_toBottomOf="@+id/rcy_txt_price"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/detail_linlay_small"
                app:layout_constraintWidth_percent="0.6"
                app:layout_constraintVertical_chainStyle="packed" />
            <LinearLayout
                android:id="@+id/detail_linlay_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="9dp"
                app:layout_constraintTop_toBottomOf="@+id/rcy_txt_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/rcy_img_bungae"
                app:layout_constraintVertical_chainStyle="packed">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/detail_txt_time"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:drawablePadding="2dp"
                    android:text="1시간 전"
                    android:textSize="11sp"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/nanum_square_b"
                    android:drawableLeft="@drawable/detail_img_small_time_resize"
                    android:maxLines="1"
                    android:ellipsize="end"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/detail_txt_eye"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:drawablePadding="2dp"
                    android:text="5"
                    android:textSize="11sp"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/nanum_square_b"
                    android:drawableLeft="@drawable/detail_img_small_eye_resize"
                    android:maxLines="1"
                    android:ellipsize="end"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/detail_txt_heart"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:drawablePadding="2dp"
                    android:text="0"
                    android:textSize="11sp"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/nanum_square_b"
                    android:drawableLeft="@drawable/detail_img_small_heart_resize"
                    android:maxLines="1"
                    android:ellipsize="end"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/detail_img_ad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/img_detail_ad"
                app:layout_constraintTop_toBottomOf="@+id/detail_linlay_small"
                app:layout_constraintBottom_toTopOf="@+id/detail_txt_region"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:adjustViewBounds="true"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/detail_txt_region"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginVertical="10dp"
                android:drawableLeft="@drawable/img_detail_region"
                android:text="충청남도 천안시"
                android:textSize="13sp"
                android:textColor="@color/gray"
                android:fontFamily="@font/nanum_square_b"
                android:gravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@+id/detail_img_ad"
                app:layout_constraintBottom_toTopOf="@+id/detail_txt_delivery"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/detail_txt_delivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:text="중고 • 배송비포함 • 총 1개"
                android:textSize="11sp"
                android:textColor="@color/gray"
                android:fontFamily="@font/nanum_square_b"
                android:gravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@+id/detail_txt_region"
                app:layout_constraintBottom_toTopOf="@+id/detail_txt_body"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/detail_txt_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:layout_marginVertical="20dp"
                android:text="gtx 1050 2g 그래픽카드 입니다. 하자없이 정상작동 잘됩니다. 연락주세요.\ngtx 1050 2g 그래픽카드 입니다. 하자없이 정상작동 잘됩니다. 연락주세요.\ngtx 1050 2g 그래픽카드 입니다. 하자없이 정상작동 잘됩니다. 연락주세요.\ngtx 1050 2g 그래픽카드 입니다. 하자없이 정상작동 잘됩니다. 연락주세요.\ngtx 1050 2g 그래픽카드 입니다. 하자없이 정상작동 잘됩니다. 연락주세요.\n"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/nanum_square_b"
                android:lineSpacingExtra="10dp"
                app:layout_constraintTop_toBottomOf="@+id/detail_txt_delivery"
                app:layout_constraintBottom_toTopOf="@+id/detail_txt_category"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/detail_txt_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/img_detail_category"
                android:text="메모리/VGA"
                android:textSize="13sp"
                android:textColor="@color/gray"
                android:fontFamily="@font/nanum_square_eb"
                app:layout_constraintTop_toBottomOf="@+id/detail_txt_body"
                app:layout_constraintBottom_toTopOf="@+id/detail_img_qna"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <ImageView
                android:id="@+id/detail_img_qna"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="20dp"
                android:src="@drawable/img_detail_qna"
                app:layout_constraintTop_toBottomOf="@+id/detail_txt_category"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:adjustViewBounds="true"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0">
        <LinearLayout
            android:id="@+id/tlb_home"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="#00000000"
            android:fitsSystemWindows="true">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/tlb_btn_home_menu"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="18dp"
                android:background="@drawable/ripple_background_oval"
                android:clickable="true"
                android:scaleType="centerInside"
                android:src="@drawable/tlb_img_angle_braket_left_resize"
                android:tint="@color/white" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginHorizontal="15dp"
                android:gravity="center_vertical"
                android:text="상품 정보"
                android:textSize="17sp"
                android:textColor="@color/black"
                android:fontFamily="@font/nanum_square_eb"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/tlb_btn_home_search"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:src="@drawable/tlb_img_search_resize"
                android:tint="@color/white"
                android:scaleType="centerInside"
                android:background="@drawable/ripple_background_oval"
                android:clickable="true"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/tlb_btn_home_share"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:src="@drawable/tlb_img_share_resize"
                android:tint="@color/white"
                android:scaleType="centerInside"
                android:background="@drawable/ripple_background_oval"
                android:clickable="true"/>
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginHorizontal="13dp"
            android:visibility="gone"
            android:fitsSystemWindows="true">
            <androidx.cardview.widget.CardView
                android:layout_gravity="center_vertical"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:cardCornerRadius="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintRight_toRightOf="parent" >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/img_home_shoes" />
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>