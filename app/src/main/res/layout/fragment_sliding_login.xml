<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".src.login.SlidingLoginFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="다른 방법으로 로그인"
            android:textSize="27sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginVertical="20dp"
            android:fontFamily="@font/nanum_square_eb"
            app:fontFamily="@font/nanum_square_b" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="페이스북으로 시작하기"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:fontFamily="@font/nanum_square_eb"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/other_login_facebook_resize"
            android:background="@drawable/ripple_background_round"
            android:gravity="left|center_vertical"
            android:clickable="true"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="네이버로 시작하기"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:fontFamily="@font/nanum_square_eb"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/other_login_naver_resize"
            android:background="@drawable/ripple_background_round"
            android:gravity="left|center_vertical"
            android:clickable="true"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="본인인증으로 시작하기"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:fontFamily="@font/nanum_square_eb"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/other_login_phone_resize"
            android:background="@drawable/ripple_background_round"
            android:gravity="left|center_vertical"
            android:clickable="true"/>
    </LinearLayout>
</FrameLayout>