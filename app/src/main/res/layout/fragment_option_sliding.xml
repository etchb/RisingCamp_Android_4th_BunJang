<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/option_back"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".src.login.other.SlidingLoginFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="옵션 선택"
            android:textSize="27sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginVertical="20dp"
            android:fontFamily="@font/nanum_square_eb" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"
                android:text="수량"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:fontFamily="@font/nanum_square_eb"/>
            <EditText
                android:id="@+id/option_edt_item_cnt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:hint="0"
                android:layout_weight="0.74"
                android:background="@drawable/pay_textbox_border"
                android:textSize="12sp"
                android:textColor="@color/black"
                android:fontFamily="@font/nanum_square_eb"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.26"
                android:text="상품상태"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:fontFamily="@font/nanum_square_eb"/>
            <TextView
                android:id="@+id/option_btn_item_old"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.37"
                android:background="@drawable/option_white_border"
                android:text="중고상품"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:fontFamily="@font/nanum_square_eb"
                android:gravity="center"
                android:clickable="true"/>
            <TextView
                android:id="@+id/option_btn_item_new"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:layout_weight="0.37"
                android:background="@drawable/option_white_border"
                android:text="새상품"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:fontFamily="@font/nanum_square_eb"
                android:gravity="center"
                android:clickable="true"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.26"
                android:text="교환"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:fontFamily="@font/nanum_square_eb"/>
            <TextView
                android:id="@+id/option_btn_exchange_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.37"
                android:background="@drawable/option_white_border"
                android:text="불가"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:fontFamily="@font/nanum_square_eb"
                android:gravity="center"
                android:clickable="true"/>
            <TextView
                android:id="@+id/option_btn_exchange_ok"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:layout_weight="0.37"
                android:background="@drawable/option_white_border"
                android:text="가능"
                android:textSize="12sp"
                android:textColor="@color/gray"
                android:fontFamily="@font/nanum_square_eb"
                android:gravity="center"
                android:clickable="true"/>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/option_btn_done"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="선택 완료"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:fontFamily="@font/nanum_square_eb"
            android:gravity="center"
            android:stateListAnimator="@null"
            android:background="@drawable/other_login_next_button"
            android:layout_marginTop="40dp" />
    </LinearLayout>
</FrameLayout>