<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".src.login.DesSlideFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/txt_des_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취향을 잇는 거래,\n 번개장터"
            android:textColor="@color/black"
            android:textSize="32sp"
            android:fontFamily="@font/nanum_square_eb"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/txt_des_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_chainStyle="packed"/>

        <TextView
            android:id="@+id/txt_des_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="요즘 유행하는 메이저 취향부터\n나만 알고 싶은 마이너 취향까지"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:fontFamily="@font/nanum_square_b"
            android:gravity="center"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_des_title"
            app:layout_constraintBottom_toTopOf="@+id/img_des_slide"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_chainStyle="packed"/>

        <ImageView
            android:id="@+id/img_des_slide"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/login_pic_1"
            android:scaleType="fitCenter"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_des_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHeight_percent="0.27"
            app:layout_constraintVertical_chainStyle="packed"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>