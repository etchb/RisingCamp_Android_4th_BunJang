<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/rcy_rootlay"
    android:background="@drawable/ripple_background_round"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="18dp"
    android:layout_marginHorizontal="5dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/rcy_cardview"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/rcy_txt_price"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/rcy_img_product"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/rcy_img_heart"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="top|right"
            android:padding="10dp"
            android:clickable="true"
            android:tint="@color/white"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/img_heart" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/rcy_txt_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="12dp"
        android:text="150,000원"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="@font/nanum_square_eb"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@+id/rcy_cardview"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/rcy_txt_title"/>
    <TextView
        android:id="@+id/rcy_txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="5dp"
        android:text="갤럭시 GTX970"
        android:textSize="13sp"
        android:textColor="@color/black"
        android:fontFamily="@font/nanum_square_r"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@+id/rcy_txt_price"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/rcy_linlay_region" />
    <LinearLayout
        android:id="@+id/rcy_linlay_region"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/rcy_txt_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/rcy_img_bungae">
        <TextView
            android:id="@+id/rcy_txt_region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="부개역"
            android:textSize="11sp"
            android:textColor="@color/gray"
            android:fontFamily="@font/nanum_square_eb"
            android:maxLines="1"
            android:ellipsize="end"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="2dp"
            android:text="•"
            android:textSize="11sp"
            android:textColor="@color/gray"
            android:maxLines="1"
            android:ellipsize="end" />
        <TextView
            android:id="@+id/rcy_txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="31분 전"
            android:textSize="11sp"
            android:textColor="@color/gray"
            android:fontFamily="@font/nanum_square_eb"
            android:maxLines="1"
            android:ellipsize="end"/>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/rcy_img_bungae"
        android:layout_width="40dp"
        android:layout_height="15dp"
        android:src="@drawable/img_bungae_pay"
        android:scaleType="fitStart"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@+id/rcy_linlay_region"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/rcy_linlay_small_heart"
        app:layout_constraintHorizontal_bias="0"/>
    <LinearLayout
        android:id="@+id/rcy_linlay_small_heart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/rcy_img_bungae"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:scaleType="centerInside"
            android:src="@drawable/img_small_heart" />
        <TextView
            android:id="@+id/rcy_txt_small_heart_cnt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginHorizontal="2dp"
            android:text="3"
            android:textSize="11sp"
            android:textColor="@color/gray"
            android:maxLines="1"
            android:ellipsize="end" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>